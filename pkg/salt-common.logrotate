/var/log/salt/master {
	weekly
	missingok
	rotate 7
	compress
	notifempty
	sharedscripts
	postrotate
		/sbin/service salt-master condrestart
	endscript
}

/var/log/salt/minion {
	weekly
	missingok
	rotate 7
	compress
	notifempty
	sharedscripts
	postrotate
		/sbin/service salt-minion condrestart
	endscript
}

/var/log/salt/key {
	weekly
	missingok
	rotate 7
	compress
	notifempty
}
