# Maintainer: Thomas S Hatch <thatch45@gmail.com>

pkgname=salt
pkgver=0.7.0
pkgrel=1
pkgdesc="A remote execution and communication system built on zeromq"
arch=(any)
url="https://github.com/thatch45/salt"
license=("APACHE")
depends=('python2'
         'python2-pyzmq'
         'python-m2crypto'
         'python2-yaml'
         'pycrypto'
         'facter')
backup=('etc/salt/master' 
        'etc/salt/minion')
makedepends=()
optdepends=()
options=()
source=("https://github.com/downloads/thatch45/salt/$pkgname-$pkgver.tar.gz"
        "salt-master"
        "salt-minion")
md5sums=('93cc483021fbcc9920cb4daa3b2c36e2'
         '4baf45d1610d771b742de2cbd8951b9f'
         '11bc2e9042a5764e029fefbe49dddcc7')

package() {
  cd $srcdir/$pkgname-$pkgver

  python2 setup.py install --root=$pkgdir/ --optimize=1

  mkdir -p $pkgdir/etc/rc.d/
  cp $srcdir/salt-m* $pkgdir/etc/rc.d/
  chmod +x $pkgdir/etc/rc.d/*
}
