   file.mknod:
     \- ntype: c
     \- major: 180
     \- minor: 31
     \- user: root
     \- group: root
     \- mode: 660

 /dev/blk:
   file.mknod:
     \- ntype: b
     \- major: 8
     \- minor: 999
     \- user: root
     \- group: root
     \- mode: 660

/dev/fifo:
  file.mknod:
    \- ntype: p
    \- user: root
    \- group: root
    \- mode: 660
.ft P
.fi
