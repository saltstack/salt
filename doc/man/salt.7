.ft C
a_string_env:
   environ.set:
     \- name: foo
     \- value: bar
     \- update_minion: True

a_dict_env:
   environ.set:
     \- name: does_not_matter
     \- value:
         foo: bar
         baz: quux
.ft P
.fi
