.INDENT 3.5
.sp
.nf
.ft C
wget https://raw.githubusercontent.com/saltstack/salt/develop/tests/eventlisten.py
python eventlisten.py

# OR
python eventlisten.py \-\-sock\-dir /path/to/var/run/salt
.ft P
.fi
